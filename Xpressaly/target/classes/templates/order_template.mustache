<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Mi Pedido</title>
</head>
<body>

<h1>Mi Pedido</h1>

{{#order.products}}
    <div>
        <h3>{{name}}</h3>
        <p>Precio: ${{price}}</p>

        <!-- Mostrar la imagen del producto -->
        <img src="{{mainImage}}" alt="{{name}}" width="200" /> <!-- Cambia el tamaño si es necesario -->

        <!-- Formulario para eliminar el producto del pedido -->
        <form action="/remove-from-order" method="post">
            <input type="hidden" name="productId" value="{{id}}">
            <button type="submit">Eliminar del Pedido</button>
        </form>
    </div>
{{/order.products}}

{{#order.products.length}}
    <br>
    <h3>Dirección de Envío: {{order.address}}</h3>
    <form action="/confirm-order" method="post">
        <input type="text" name="address" value="{{order.address}}" placeholder="Cambiar dirección">
        <button type="submit">Confirmar Pedido</button>
    </form>
{{/order.products.length}}

{{^order.products.length}}
    <p>No hay productos en tu pedido.</p>
{{/order.products.length}}

<!-- Botón para regresar a la página de productos -->
<a href="/products">
    <button type="button">Volver a la Lista de Productos</button>
</a>

<!-- Botón para regresar a la página principal -->
<a href="/" style="text-decoration: none;">
    <button type="button">Volver a la Página de Inicio</button>
</a>

</body>
</html>
