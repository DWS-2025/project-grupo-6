<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    
</head>

<body>
    {{> common/header}}

    <main>
        <!-- Profile Picture -->
        <div class="profile-section">
            <div class="profile-picture">
                ðŸ‘¤
            </div>
            <p id="userName">{{name}} {{surname}}</p>
        </div>

        <!-- Personal data section -->
        <div class="personal-data">
            <h2>Personal Data</h2>
            <form>
                <label>Name and Surname:</label>
                <input type="text" value="{{name}} {{surname}}" disabled>

                <label class="block mb-2 text-[#294156]">Telephone Number:</label>
                <input type="text" value="{{phone}}" class="w-full p-2 border rounded mb-4 text-[#294156]" disabled>

                <label class="block mb-2 text-[#294156]">Email:</label>
                <input type="email" value="{{email}}" class="w-full p-2 border rounded mb-4 text-[#294156]" disabled>

                <label class="block mb-2 text-[#294156]">Age:</label>
                <input type="number" value="{{age}}" class="w-full p-2 border rounded mb-4 text-[#294156]" disabled>

                <label class="block mb-2 text-[#294156]">Delivery Address:</label>
                <input type="text" value="{{address}}" class="w-full p-2 border rounded mb-4 text-[#294156]">

                <label class="block mb-2 text-[#294156]">Password:</label>
                <div class="password-container">
                    <input id="passwordInput" type="password" value="C0ntr4s3Ã±4_Ultr4_S3gur4" class="w-full p-2 border rounded text-[#294156]" disabled>
                    <button type="button" onclick="togglePasswordVisibility()">Show</button>
                </div>
                <button type="button" class="change-password-btn">Change Password</button>
            </form>
        </div>

        <!-- Options menu -->
        <div class="options-menu">
            <a href="/orders" class="option-card">
                <h3>My orders</h3>
                <p>View orders placed and in progress.</p>
            </a>
        </div>

        <!-- Reviews Section -->
        <div class="reviews-section">
            <h2>My Reviews</h2>
            {{#reviews}}
            <div class="review-card">
                <h3>{{productName}}</h3>
                <div class="rating">
                    <span class="star">â˜…</span>
                    <span class="rating-value">{{rating}}/5</span>
                </div>
                <p class="review-comment">{{comment}}</p>
                <span class="review-date">{{date}}</span>
            </div>
            {{/reviews}}
            {{^reviews}}
            <p class="no-reviews">No reviews yet.</p>
            {{/reviews}}
        </div>
    </main>

    {{> common/footer}}

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById("passwordInput");
            const toggleButton = document.querySelector(".password-container button");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleButton.textContent = "Hide";
            } else {
                passwordInput.type = "password";
                toggleButton.textContent = "Show";
            }
        }
    </script>
</body>

</html>
